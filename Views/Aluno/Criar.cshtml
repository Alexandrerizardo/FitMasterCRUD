@{
    ViewData["Title"] = "Cadastro de Aluno";
}

<style>
    html,
    body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #eaeaea;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
        height: 60%;
        width: 100vw;
        max-width: 600px;
        max-height: 800px;
        min-height: 600px;
    }

    body {
        font-family: 'MinhaFonte', sans-serif;
    }
</style>

@if (ViewBag.Mensagem != null)
{
    <p class="alert alert-success mt-4 mb-4">@ViewBag.Mensagem</p>
}
<div class="d-flex justify-content-center align-items-center vh-100 flex-column">
    <div class="text-center mb-4">
        <h2>Cadastre-se agora!</h2>
    </div>
    <div class="login-container">
        <form method="post" asp-controller="Aluno" asp-action="Criar" class="container mt-4">
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input type="text" name="Nome" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Idade</label>
                <input type="number" name="Idade" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input type="password" name="Senha" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirme a Senha</label>
                <input type="password" name="SenhaConfirm" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Plano</label>
                <select name="Plano" class="form-select">
                    <option value="Básico">Básico</option>
                    <option value="Intermediário">Intermediário</option>
                    <option value="Avançado">Avançado</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
        </form>
    </div>
</div>
